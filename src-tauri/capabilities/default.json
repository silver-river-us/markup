{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default", 
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default", 
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-exists",
    "fs:allow-read-dir",
    "dialog:default",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "**" }
      ]
    }
  ]
}
